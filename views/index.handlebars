<!--Navbar-->
<nav class="navbar navbar-expand-lg navbar-dark z-depth-2" style="background: #97004b;">

    <!-- Navbar brand -->
    <a class="navbar-brand navfont" href="/">Mongo Scraper</a>

    <!-- Collapse button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse justify-content-center" id="basicExampleNav">

        <!-- Left Side  -->
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/scrape">
                    <i class="far fa-hand-rock"></i> Scrape Articles</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/saved">
                    <i class="far fa-bookmark"></i> Saved Articles</a>
            </li>
        </ul>
    </div>
</nav>


<div class="container">

    <!-- First row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 id="headerfont">Mongo Scraper</h1>
            <h3>The Verge Edition</h3>
        </div>
    </div>

    <!-- Row for Article -->
    {{#each article}}
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="card mb-5">
                <div class="card-body text-dark z-depth-2 rounded">
                    <h2 class="card-text" id="articletext">{{this.title}}</h2><br>
                    <div class="row">
                        <div class="col-md-4">
                            <form class="form-inline" action="{{this.link}}" method="GET" target="_blank">
                                <button type="submit" class="btn btn-unique btn-sm">
                                    <i class="fas fa-book-reader"></i> Read Article</button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <form class="form-inline" action="/saved" method="POST">
                                <button type="submit" class="btn btn-unique btn-sm">
                                    <i class="far fa-save"></i> Save Article</button>
                            </form>
                        </div>
                        <div class="col-lg-4">
                            <form class="form-inline" action="/saved" method="POST">
                                <button type="submit" class="btn btn-unique btn-sm">
                                    <i class="fas fa-edit"></i> Add Note</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
    {{/each}}


</div>

<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>